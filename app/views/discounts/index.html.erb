<h1>My Discounts</h1>

<table id="discounts">
  <thead>
    <tr>
      <th>Percentage Discount</th>
      <th>Quantity Threshold</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @discounts.each do |discount| %>
      <tr id="discount-<%= discount.id %>">
        <td><%= discount.percent %>%</td>
        <td><%= discount.quantity %></td>
        <td><%= link_to 'Show', merchant_discount_path(@merchant, discount) %></td>
        <td><%= button_to 'Delete', merchant_discount_path(@merchant, discount), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Create a New Discount', new_merchant_discount_path(@merchant) %>
<%= link_to 'Back to Dashboard', merchant_dashboard_index_path(@merchant) %>

<section class="holidays">
  <h2>Upcoming Holidays</h2>
  <ul>
    <% @holidays.each do |holiday| %>
      <li><%= holiday['name'] %> - <%= holiday['date'] %></li>
    <% end %>
  </ul>
</section>
